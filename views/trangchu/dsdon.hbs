                  <a href="/xemstudio?id={{id}}">
                     <p>{{tenStudio}}</p>
                  </a>
                  <h4>{{tengoi}}</h4>
                  
                  <ul class="list-unstyled">
                     <p>Thời gian: {{formatDate ngaydat}}</p>
                     <p>Số lượng: {{soluonganh}}</p>
                     <p>Thông tin: {{thongtinthem}}</p>
                     <li><button class="genric-btn warning">ĐANG XỬ LÝ</button>
                     <li>
                        <form method="GET" action="/xoadondat?kh={{khachhang}}&gc={{goichup}}&nd={{ngaydat}}">
                           <input type="hidden" name="khachhang" value="{{khachhang}}">
                           <input type="hidden" name="goichup" value="{{goichup}}">
                           <input type="hidden" name="ngaydat" value="{{ngaydat}}">
                           <input type="submit" class="btn genric-btn success" value="XÓA ĐƠN">
                        </form>
                     </li>
